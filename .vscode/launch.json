{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug IRC Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ircserv",
            "args": ["4444", "kali"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar la impresi√≥n bonita para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}